<%= render "shared/errors", obj: @user %>
<div class="form-group">
    <label for="name">Name:</label>
    <%= f.text_field(:name , :placeholder=> "Name", :class=> "form-control", :style => "width:50%;") %>
</div>
<div class="form-group">
    <label for="address">Address:</label>
    <%= f.text_area(:address , :placeholder=> "Address", :class=> "form-control", :style => "width:50%;") %>
</div>
<div class="form-group">
    <label for="contact">Contact:</label>
    <%= f.number_field(:contact , :placeholder=> "Contact", :class=> "form-control", :style => "width:50%;") %>
</div>