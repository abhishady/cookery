<div class="row">
	<div class="container">
		<h2>DISHES LIST</h2><br>
		<h4 class="col-lg-1 col_name">S.No.</h4>
		<h4 class="col-lg-3 col_name">User Name</h4>
		<h4 class="col-lg-4 col_name">Dish Name</h4>
		<h4 class="col-lg-2 col_name">Date</h4>
		<h4 class="col-lg-2 col_name">Action</h4>
	</div>
</div>
<% @x = 1 %>
<% @dishes.each do|dish| %>

<div class="row">
	<div class="container">
		<h4 class="col-lg-1 col_name"><%= @x %></h4>
		<h4 class="col-lg-3 col_name"><%= dish.user.name %></h4>
		<h4 class="col-lg-4 col_name"><%= dish.dish_name %></h4>
		<h4 class="col-lg-2 col_name"><%= dish.date %></h4>
		<h4 class="col-lg-2 col_name">
			<%= link_to raw("<i class='glyphicon glyphicon-edit' data-toggle='tooltip' data-placement='top' title='Edit' style='font-size:14px;margin-right:10px;'></i>"),{controller:"add_dish",action:"edit", :id=> dish.id} %>
			<%= link_to raw("<i class='glyphicon glyphicon-remove-circle' data-toggle='tooltip' data-placement='top' title='Delete' style='font-size:14px;margin-left:10px;'></i>"),{controller:"add_dish",action:"delete", :id=> dish.id} %>
		</h4>
	</div>
</div>
<% @x = @x + 1 %>
<% end %>