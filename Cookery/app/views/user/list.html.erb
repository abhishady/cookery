<div class="row">
	<div class="container">
		<h2>USERS LIST</h2><br>
		<h4 class="col-lg-1 col_name">S.No.</h4>
		<h4 class="col-lg-1 col_name">User Id</h4>
		<h4 class="col-lg-4 col_name">Email</h4>
		<h4 class="col-lg-4 col_name">Password</h4>
		<h4 class="col-lg-2 col_name">Action</h4>
	</div>
</div>
<% @x = 1 %>
<% @users.each do|user| %>

<div class="row">
	<div class="container">
		<h4 class="col-lg-1 col_name"><%= @x %></h4>
		<h4 class="col-lg-1 col_name"><%= user.id %></h4>
		<h4 class="col-lg-4 col_name"><%= user.email %></h4>
		<h4 class="col-lg-4 col_name"><%= user.password %></h4>
		<h4 class="col-lg-2 col_name">
			<%= link_to raw("<i class='glyphicon glyphicon-edit' data-toggle='tooltip' data-placement='top' title='Edit' style='font-size:14px;margin-right:10px;'></i>"),{controller:"user",action:"edit", :id=> user.id} %>
			<%= link_to raw("<i class='glyphicon glyphicon-remove-circle' data-toggle='tooltip' data-placement='top' title='Delete' style='font-size:14px;margin-left:10px;'></i>"),{controller:"user",action:"delete", :id=> user.id} %>
		</h4>
	</div>
</div>
<% @x = @x + 1 %>
<% end %>