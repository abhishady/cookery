<% if obj.errors.any? %>
	<div class="row">
		<div class="col-xs-8">
			<div class="panel panel-danger" id="hide-panel">
				<div class="panel-heading">
					<h2 class="panel-title">
						<%= pluralize(obj.errors.count, "error") %>
					</h2>
					<div class="panel-body">
					<a href="#hide-panel" class="close" data-target="#hide-panel" data-dismiss="alert">&#215;</a>

						<ul>
							<%= obj.errors.full_messages.each do |msg| %>
								<li><%= msg %></li>
							<% end %>
						</ul>
					</div>	
				</div>	
			</div>
		</div>
	</div>
<% end %>